	<!-- Weapon Defs -->
	<!-- Archotech Pistol  -->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>BunX_Gun_ArchotechPistol</defName>
		<label>Archotech Pistol</label>
		<description>Expertly engineered pistol utilizing pulse-charge technology in conjunction with Archotech material. An Archotech shard charges the bullet before exiting the barrel, dealing great blow to the target.
This specific model exists as a high end defensive measure for high ranking individuals.</description>
		<techLevel>Archotech</techLevel>
		<graphicData>
			<texPath>WeaponRanged/ArchotechPistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_SMG</soundInteract>
		<statBases>
			<Mass>1.1</Mass>
			<AccuracyTouch>1.0</AccuracyTouch>
			<AccuracyShort>0.95</AccuracyShort>
			<AccuracyMedium>0.65</AccuracyMedium>
			<AccuracyLong>0.45</AccuracyLong>
			<RangedWeapon_Cooldown>1.35</RangedWeapon_Cooldown>
			<WorkToMake>20000</WorkToMake>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BunX_Archotech</researchPrerequisite>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<Plasteel>75</Plasteel>
			<ComponentSpacer>2</ComponentSpacer>
			<BunX_ArchotechShard>1</BunX_ArchotechShard>
		</costList>
		<weaponTags>
			<li>ArchotechGun</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>BunX_Bullet_Pistol</defaultProjectile>
				<warmupTime>0.2</warmupTime>
				<minRange>0.5</minRange>
				<range>27.9</range>
				<ticksBetweenBurstShots>4</ticksBetweenBurstShots>
				<burstShotCount>2</burstShotCount>
				<soundCast>BunX_Light_Shot</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>4</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>11</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

